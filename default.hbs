<!DOCTYPE html>
<html lang="{{@site.locale}}">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{meta_title}}</title>
    <link rel="stylesheet" href="{{asset "built/screen.css"}}">
        <script>
        	if(typeof(Storage) !== 'undefined') {
                if (localStorage.getItem('selected-theme') == 'light') {
                    document.documentElement.setAttribute('data-theme', 'light');
                }
                else if (localStorage.getItem('selected-theme') == 'dark') {
                    document.documentElement.setAttribute('data-theme', 'dark');
                }
        	}
        </script>
        {{#if @member}}
        {{else}}
        {{#is "home"}}
        {{> "newsletter"}}
    <link rel="stylesheet" href="{{asset "built/home.css"}}">
        {{/is}}
        {{/if}}
    {{ghost_head}}
</head>

<body class="{{body_class}}{{{block "body_class"}}} {{#if @site.description}}is-head-b--a_n{{else}}is-head-b--n--a{{/if}}{{#is "tag"}}{{#if tag.feature_image}} is-head-transparent{{/if}}{{/is}}{{#match @custom.header_style "Accent color"}} is-head-brand{{/match}}{{#match @custom.header_style "Dark"}} is-head-dark{{/match}}">
    <div class="gh-site">
        <header id="gh-head" class="gh-head gh-outer">
            <div class="gh-head-inner gh-inner">
                <div class="gh-head-brand">
                    <div class="gh-head-brand-wrapper">
                        <a class="gh-head-logo" href="{{@site.url}}">
                            {{#if @site.logo}}
                                {{#if @custom.white_publication_logo_for_transparent_header}}
        <img class="logo-light" src="{{@site.logo}}" alt="{{@site.title}}">
        <img class="logo-dark" src="{{@custom.white_publication_logo_for_transparent_header}}" alt="{{@site.title}}">
                                    {{else}}
                            <img src="{{@site.logo}}" alt="{{@site.title}}">
                                {{/if}}
                            {{else}}
                                {{@site.title}}
                            {{/if}}
                        </a>
                    </div>
                    <button id="gh-burger" class="gh-burger"></button>
                </div>
                <nav class="gh-head-menu">
                    {{navigation}}
                    {{#unless @member}}
                        <a class="gh-head-btn gh-btn" href="/ingreso">{{ t "Subscribe" }}</a>
                    {{else}}
                        <a class="gh-head-btn gh-btn" href="/cuenta">{{ t "Account" }}</a>
                    {{/unless}}
                </nav>

                <div class="gh-head-actions">
                    <div class ="container">
                    <button class="gh-search gh-icon-btn" data-ghost-search>{{> "icons/search"}}</button>
                    <div class="it-dark-light gh-icon-btn">
                    <div class="icon-dark">
                        {{> icons/light}}
                    </div>
                    <div class="icon-light">
                        {{> icons/dark}}
                    </div>
                    </div>
                </div>
                </div>
            </div>
        </header>
            </div>
        {{{body}}}

        <footer class="gh-foot gh-outer">
            <div class="gh-foot-inner gh-inner">                     

  {{#get 'posts'}}
    {{#foreach posts visibility='all'}}
        {{/foreach}}
  {{/get}}
    <section class="gh-subscribe">
                {{#if @member.paid}}
                        <h4 class="gh-subscribe-title">{{ t "We are here" }}</h3>
                                <div class="gh-subscribe-description">{{ t "Contact us paid"}}</div>
                                <a class="gh-subscribe-btn gh-btn" href="https://comunidad.criptonautas.co/c/criptonautas/4">{{ t "Post forum" }}</a>
                        {{else if @member}}
                            <h4 class="gh-subscribe-title">{{ t "Shared analysis?" }}</h3>
                            <div class="gh-subscribe-description">{{ t "Padawans description"}}</div>
                                                        <a class="gh-subscribe-btn gh-btn" href="https://discord.criptonautas.co">{{ t "Learn from Criptonauts" }}</a>
                        {{else}}
                        <h4 class="gh-subscribe-title">{{ t "Subscribe to" }}</h3>
                                <div class="gh-subscribe-description">{{ t "Newsletter description"}}</div>

                            <a class="gh-subscribe-btn gh-btn" href="/registro">{{ t "Subscribe now" }}</a>
                {{/if}}
                    </section>
            </div>
        </footer>
<div class="footer-criptonauta">
                        <nav class="gh-foot-menu">
                    {{navigation type="secondary"}}
                </nav>
            <div class="it-foot-social">
                {{#if @site.twitter}}
                <a href="{{twitter_url @site.twitter}}" title="{{t "Twitter"}}" target="_blank" rel="noopener" aria-label="{{t "Twitter"}}">{{> "icons/twitter"}}</a>
                {{/if}}
                <a href="https://github.com/somos-criptonautas/" class="github" title="{{t "Github"}}" target="_blank" rel="noopener" aria-label="{{t "Github"}}">{{> "icons/github"}}</a>
                <a href="{{@site.url}}/rss/" class="rss" title="{{t "RSS"}}" target="_blank" rel="noopener" aria-label="{{t "RSS"}}">{{> "icons/rss"}}</a>
            </div>
                <div class="gh-copyright">
                    {{#unless @custom.footer_text}}
                <p>Criptonautas&nbsp;{{ t "is licensed under" }}  <a href="http://creativecommons.org/licenses/by-nc-sa/4.0/?ref=chooser-v1" target="_blank" rel="license noopener noreferrer" >Creative Commons</a><br>{{ t "with üßò‚Äç‚ôÇÔ∏è" }} <a href="https://matenauta.co" title="matenauta's stuff" target="_blank" rel="noopener">matenauta</a></p>

                    {{else}}
                        {{@custom.footer_text}}
                    {{/unless}}
                </div>
    </div>
</div>
    {{#is "post, page"}}
        {{> "pswp"}}
    {{/is}}

{{> "site-structure/site-scripts"}} 
        {{{block "scripts"}}}
{{ghost_foot}}
</body>

</html>