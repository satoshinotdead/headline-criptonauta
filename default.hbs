<!DOCTYPE html>
<html lang="{{@site.locale}}">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{meta_title}}</title>
    <link rel="stylesheet" href="{{asset "built/screen.css"}}">
    <link href="{{@site.url}}/continue" rel="prefetch">
    <link href="{{@site.url}}/start" rel="prefetch">
<link rel="preconnect" href="https://comunidad.criptonautas.co">
        <script>
        	if(typeof(Storage) !== 'undefined') {
                if (localStorage.getItem('selected-theme') == 'light') {
                    document.documentElement.setAttribute('data-theme', 'light');
                }
                else if (localStorage.getItem('selected-theme') == 'dark') {
                    document.documentElement.setAttribute('data-theme', 'dark');
                }
        	}
        </script>
        {{#if @member}}
        {{else}}
        {{#is "home"}}
        {{> "newsletter"}}
    <link rel="stylesheet" href="{{asset "built/home.css"}}">
        {{/is}}
        {{/if}}
    {{ghost_head}}

</head>

<body class="{{body_class}}{{{block "body_class"}}} {{#if @site.description}}is-head-b--a_n{{else}}is-head-b--n--a{{/if}}{{#is "tag"}}{{#if tag.feature_image}} is-head-transparent{{/if}}{{/is}}{{#match @custom.header_style "Accent color"}} is-head-brand{{/match}}">
    <div class="gh-site">
        <header id="gh-head" class="gh-head gh-outer">
            <div class="gh-head-inner gh-inner">
                <div class="gh-head-brand">
                    <div class="gh-head-brand-wrapper">
                    {{^is "home"}}<a class="gh-head-logo" href="{{@site.url}}">{{/is}}
                            {{#if @site.logo}}
        <img class="logo-light" src="{{@site.logo}}" alt="{{@site.title}}">
        <img class="logo-dark" src="{{@custom.white_publication_logo_for_transparent_header}}" alt="{{@site.title}}">
                            {{else}}
                                {{@site.title}}
                            {{/if}}
                        {{^is "home"}}</a>{{/is}}
                    {{#is "home"}}</h1>{{/is}}
                    </div>
                </div>
                    <button id="gh-burger" class="gh-burger"></button>
                <nav class="gh-head-menu">
                    {{navigation}}
                </nav>
                <div class="gh-head-actions">
                    <div class ="actions-container">
                    {{#unless @member}}
                        <a aria-label="signup-button" title="{{ t "start" }}" class="gh-head-btn gh-btn shadow" href="{{@site.url}}/start">START</a>
                    {{else}}
                        <a aria-label="signin-button" title="{{ t "profile" }}" class="gh-head-btn gh-btn shadow" href="{{@site.url}}/profile">{{ t "Account" }}</a>
                    {{/unless}}
                    <div class="nav-icons">
                    <button class="gh-search gh-icon-btn" data-ghost-search>{{> "icons/search"}}</button>
                    <div class="it-dark-light gh-icon-btn">
                    <div class="icon-dark">
                        {{> icons/light}}
                    </div>
                    <div class="icon-light">
                        {{> icons/dark}}
                    </div>
                    </div>
                </div>
                    </div>
                </div>
            </div>
        </header>
            </div>
        {{{body}}}
{{^is "page"}}
        <footer class="gh-foot gh-outer">
            <div class="gh-foot-inner gh-inner">                     

  {{#get 'posts'}}
    {{#foreach posts visibility='all'}}
        {{/foreach}}
  {{/get}}
    <section>
                {{#if @member.paid}}
                        <h4 class="gh-subscribe-title">{{ t "We are here" }}</h3>
                                <div class="gh-subscribe-description">{{ t "Only way"}}</div>
                                <a class="gh-subscribe-btn gh-btn" href="https://comunidad.criptonautas.co/c/comunidad/2">{{ t "Post forum" }}</a>
                        {{else if @member}}
                            <h4 class="gh-subscribe-title">{{ t "Keep moving!" }}</h3>
                            <div class="gh-subscribe-description">{{ t "Padawans description"}}</div>
                                                        <a class="gh-subscribe-btn gh-btn" href="https://comunidad.criptonautas.co/t/que-te-gustaria-hacer-y-no-haces/4318/1">{{ t "Go to chat" }}</a>
                        {{else}}
                        <h4 class="gh-subscribe-title">{{ t "Subscribe to" }}</h3>
                                <div class="gh-subscribe-description">{{ t "Newsletter description"}}</div>

                            <a class="gh-subscribe-btn gh-btn" href="{{@site.url}}/start">{{ t "Subscribe now" }}</a>
                {{/if}}
                    </section>
            </div>
        </footer>
{{/is}}
    <div class="footer-criptonauta">
                        <nav class="gh-foot-menu">
                    {{navigation type="secondary"}}
                </nav>
            <div class="it-foot-social">
                <a href="https://comunidad.criptonautas.co/" class="discourse" title="{{t "Discourse"}}" target="_blank" rel="noopener" aria-label="{{t "Discourse"}}">{{> "icons/discourse"}}</a>
                {{#if @site.twitter}}
                <a href="{{twitter_url @site.twitter}}" title="{{t "Twitter"}}" target="_blank" rel="noopener" aria-label="{{t "Twitter"}}">{{> "icons/twitter"}}</a>
                {{/if}}
                <a href="https://github.com/somos-criptonautas/" class="github" title="{{t "Github"}}" target="_blank" rel="noopener" aria-label="{{t "Github"}}">{{> "icons/github"}}</a>
                <a href="{{@site.url}}/rss/" class="rss" title="{{t "RSS"}}" target="_blank" rel="noopener" aria-label="{{t "RSS"}}">{{> "icons/rss"}}</a>
            </div>
            <span class="no-estamos">(no estamos en Discord)</span>
                <div class="gh-copyright">
                <p>Criptonautas&nbsp;{{ t "is licensed under" }}  <a href="https://comunidad.criptonautas.co/t/actualizamos-la-licencia-de-criptonautas/3864" rel="license">Polyform</a><br>{{ t "with üßò‚Äç‚ôÇÔ∏è" }} <a href="https://matenauta.co" title="matenauta's lab" target="_blank" rel="noopener">matenauta</a></p>
                </div>
    </div>
</div>
    {{#is "post, page"}}
        {{> "pswp"}}
    {{/is}}

{{> "site-structure/site-scripts"}} 
        {{{block "scripts"}}}
{{ghost_foot}}
</body>

</html>