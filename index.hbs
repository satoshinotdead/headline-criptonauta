{{!< default}}

<main class="gh-main gh-outer">
    <div class="gh-inner">
        <section class="gh-pagehead">
        </section>

        {{#get "posts" include="authors" limit="all"}}
            <div class="gh-topic gh-topic-grid">
                <div class="gh-topic-content">
                    {{#foreach posts}}
                        {{> "loop-grid"}}
                    {{/foreach}}
                </div>
            </div>
        {{/get}}
    </div>
</main>