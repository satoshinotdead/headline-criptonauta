{{#is "post"}}
    <aside class="gh-article-sidebar">

            <figure class="gh-author-image-list">
                {{#foreach authors}}
                {{#if profile_image}}
                    <a class="author-name-page" href="{{url}}">                    <img
                        srcset="{{img_url profile_image size="s"}} 300w,
                                {{img_url profile_image size="m"}} 720w,
                                {{img_url profile_image size="l"}} 960w,
                                {{img_url profile_image size="xl"}} 1200w,
                                {{img_url profile_image size="xxl"}} 2000w"
                        sizes="(max-width: 1200px) 100vw, 1200px"
                        src="{{img_url profile_image size="xl"}}"
                        alt="{{name}}"
                    ></a>
                {{else}}
                    <a class="author-name" href="{{url}}"><div class="gh-author-icon">{{> icons/avatar}}</div></a>
                {{/if}}
            {{/foreach}}
            </figure>
        <div class="gh-article-meta">
            <div class="gh-article-meta-inner">
                <time class="gh-article-date" datetime="{{date format="YY-MM-DD"}}">{{ date published_at }} - {{ date published_at format='h:mm A' }}</time>
            </div>
            <h4 class="gh-author-name-list">
            {{ t "by" }}
            {{#foreach authors}}
            <a href="{{url}}">{{name}}</a>
            </h4>
            {{#unless @last}},&nbsp;{{/unless}}
            {{/foreach}}
        </div>
    </aside>
{{/is}}