{{#is "post"}}
    <aside class="gh-article-sidebar">
        {{#primary_author}}
            <figure class="gh-author-image">
                {{#if profile_image}}
                    <a class="author-name" href="{{url}}"><img src="{{profile_image}}" alt="{{name}}"></a>
                {{else}}
                    <a class="author-name" href="{{url}}"><div class="gh-author-icon">{{> icons/avatar}}</div></a>
                {{/if}}
            </figure>
        <div class="gh-article-meta">
            <div class="gh-article-meta-inner">
                <time class="gh-article-date" datetime="{{date}}">{{date published_at timeago="true"}} </time>
            </div>
        </div>
            <h4 class="gh-author-name">
                            <a href="{{url}}">{{name}}</a>
            </h4>
        {{/primary_author}}
    </aside>
{{/is}}