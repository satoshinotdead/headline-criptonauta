{{#if feature_image}}
    <figure class="gh-article-image">
        <img
            srcset="https://res.cloudinary.com/cawnmzxdha/image/fetch/w_300,c_fit,q_auto,f_auto,dpr_auto/{{img_url feature_image size="s"}} 300w,
                    https://res.cloudinary.com/cawnmzxdha/image/fetch/w_720,c_fit,q_auto,f_auto,dpr_auto/{{img_url feature_image size="m"}} 720w,
                    https://res.cloudinary.com/cawnmzxdha/image/fetch/w_960,c_fit,q_auto,f_auto,dpr_auto/{{img_url feature_image size="l"}} 960w,
                    https://res.cloudinary.com/cawnmzxdha/image/fetch/w_1200,c_fit,q_auto,f_auto,dpr_auto/{{img_url feature_image size="xl"}} 1200w,
                    https://res.cloudinary.com/cawnmzxdha/image/fetch/w_2000,c_fit,q_auto,f_auto,dpr_auto/{{img_url feature_image size="xxl"}} 2000w"
            sizes="(max-width: 1200px) 100vw, 1200px"
            loading="lazy"
            src="https://res.cloudinary.com/cawnmzxdha/image/fetch/w_960,c_fit,q_auto,f_auto,dpr_auto/{{img_url feature_image size="l"}}"
            alt="{{title}}"
        >
        {{#if feature_image_caption}}
            <figcaption>{{feature_image_caption}}</figcaption>
        {{/if}}
    </figure>
{{/if}}


<img class="post-card-image"
    srcset="https://res.cloudinary.com/cawnmzxdha/image/fetch/w_300,c_fit,q_auto,f_auto,dpr_auto/{{img_url feature_image size="s" absolute="true"}} 300w,
            https://res.cloudinary.com/<YOUR_USERNAME>/image/fetch/w_600,c_fit,q_auto,f_auto,dpr_auto/{{img_url feature_image size="m" absolute="true"}} 600w,
            https://res.cloudinary.com/<YOUR_USERNAME>/image/fetch/w_1000,c_fit,q_auto,f_auto,dpr_auto/{{img_url feature_image size="l"absolute="true"}} 1000w,
            https://res.cloudinary.com/<YOUR_USERNAME>/image/fetch/w_2000,c_fit,q_auto,f_auto,dpr_auto/{{img_url feature_image size="xl"absolute="true"}} 2000w"
    sizes="(max-width: 1000px) 400px, 700px"
    loading="lazy"
    src="https://res.cloudinary.com/<YOUR_USERNAME>/image/fetch/w_600,c_fit,q_auto,f_auto,dpr_auto/{{img_url feature_image size="m" absolute="true"}}"
    alt="{{title}}"
/>