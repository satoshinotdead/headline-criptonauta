{{#if post_center}}
<img srcset="{{img_url feature_image size="s" format="webp"}} 300w, 
			 {{img_url feature_image size="m" format="webp"}} 600w,
			 {{img_url feature_image size="xl" format="webp"}} 2000w"
	 sizes="(max-width:480px) 300px, (max-width:768px) 600px, 2000px"
	 src="{{img_url feature_image size="xl" format="webp"}}"
	 alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}">
{{else if post_classic}}
<img srcset="{{img_url feature_image size="s" format="webp"}} 300w, 
			 {{img_url feature_image size="m" format="webp"}} 600w,
			 {{img_url feature_image size="xl" format="webp"}} 2000w"
	 sizes="(max-width:480px) 300px, (max-width:768px) 600px, 2000px"
	 src="{{img_url feature_image size="xl" format="webp"}}"
	 alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}">
{{else}}
<img srcset="{{img_url feature_image size="s" format="webp"}} 300w, 
			 {{img_url feature_image size="m" format="webp"}} 600w,
			 {{img_url feature_image size="l" format="webp"}} 1200w"
	 sizes="(max-width:480px) 300px, (max-width:768px) 600px, 1200px"
	 src="{{img_url feature_image size="l" format="webp"}}"
	 alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}">
{{/if}}